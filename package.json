    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "mjml": "4.14.1",
    "npm-run-all": "4.1.5",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2",
    "@types/pixelmatch": "5.2.4",
