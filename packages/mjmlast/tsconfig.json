{
  "files": ["./src/index.ts"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true
  }
}
